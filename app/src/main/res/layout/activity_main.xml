<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicit"
        android:id="@+id/btn_explicit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:onClick="explicit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit"
        android:id="@+id/btn_implicit"
        android:layout_below="@+id/btn_explicit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="implicit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Data"
        android:id="@+id/btn_return"
        android:layout_below="@+id/btn_implicit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="returndata"
        />
</RelativeLayout>
